{
    "extends": "fortech-react",
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"],
        "no-underscore-dangle": 0,
        "indent": ["error", 2],
        "max-len": 0,
        "class-methods-use-this": 0,
        "react/prefer-stateless-function": 0,
        "react/jsx-indent": 0,
        "react/sort-comp": 0,
        "react/prop-types": 0
    }
}
